          src=\"@/assets/favourate2png.png\"\r\n                alt=\"Image of heart\"\r\n                @mouseover=\"onHover\"\r\n                @mouseleave=\"onLeave\"\r\n                @click=\"onClick\"\r\n            />\r\n          </div>\r\n          <!-- start of the form -->\r\n          <form @submit.prevent=\"addToCart\">\r\n            <div class=\"form-group\">\r\n              <label for=\"dropDown\">Add {{ productComponent.name }}</label>\r\n              <select id=\"dropDown\" v-model=\"selectedSize\">\r\n                <option\r\n                    v-for=\"dropDown in dropDowns\"\r\n                    :key=\"dropDown\"\r\n                    :value=\"dropDown\"\r\n                >{{ dropDown }}</option\r\n                >\r\n              </select>\r\n            </div>\r\n\r\n            <div class=\"form-group\">\r\n              <label for=\"quantity\">Quantity</label>\r\n              <input\r\n                  type=\"number\"\r\n                  id=\"quantity\"\r\n                  v-model=\"quantity\"\r\n                  min=\"1\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-action\">\r\n              <button type=\"submit\">Add to cart</button>\r\n            </div>\r\n          </form>\r\n          <!-- end of form-->\r\n\r\n          <div class=\"in-stock\">\r\n            <p>Availability: {{ productComponent.avilability }}</p>\r\n          </div>\r\n\r\n          <!-- Tabs section -->\r\n          <div class=\"product-tabs\">\r\n            <ul>\r\n              <li\r\n                  :class=\"{ active: activeTab === 'description' }\"\r\n                  @click=\"activeTab = 'description'\"\r\n              >\r\n                Description\r\n              </li>\r\n\r\n              <li\r\n                  :class=\"{ active: activeTab === 'details' }\"\r\n                  @click=\"activeTab = 'details'\"\r\n              >\r\n                Details\r\n              </li>\r\n\r\n              <li\r\n                  :class=\"{ active: activeTab === 'ratings' }\"\r\n                  @click=\"activeTab = 'ratings'\"\r\n              >\r\n                Ratings\r\n              </li>\r\n            </ul>\r\n            <div v-if=\"activeTab === 'description'\">\r\n              <p>{{ productComponent.description }}</p>\r\n              <p>This should show more about the book</p>\r\n            </div>\r\n\r\n            <div v-if=\"activeTab === 'details'\">\r\n              <table>\r\n                <tr v-for=\"(value, key) in productDetails\" :key=\"key\">\r\n                  <td>{{ key }}</td>\r\n                  <td>{{ value }}</td>\r\n                </tr>\r\n              </table>\r\n            </div>\r\n\r\n            <div v-if=\"activeTab === 'ratings'\">\r\n              <p>Customer Ratings: {{ productComponent.ratings }} / 5</p>\r\n            </div>\r\n          </div>\r\n          <!-- End of Tabs section -->\r\n        </div>\r\n      </div>\r\n\r\n      <div class=\"Related-items\">\r\n        <h3>Related Items</h3>\r\n        <p>This will have a gallery of images that scrolls to the left and right</p>\r\n        <!-- I am still going to make the gallery here -->\r\n        <ul>\r\n          <li v-for=\"item in relatedItems\" :key=\"item.id\">{{ item.name }}</li>\r\n        </ul>\r\n      </div>\r\n    </main>\r\n    <footer class=\"page-footer\">\r\n    </footer>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport './ProductPage.css';\r\nimport NavBar from '@/components/NavBar.vue';\r\nimport FooterSection from '@/components/FooterSection.vue';\r\n\r\nexport default {\r\n  name: 'productComponent',\r\n  components: {\r\n    NavBar,\r\n    FooterSection,\r\n  },\r\n  data() {\r\n    return {\r\n      productComponent: {\r\n        imgaeurl: ' ',\r\n        name: 'productComponent',\r\n        description: 'This is a description of a product',\r\n        price: 99.99,\r\n        avilability: 'in stock', // this will consume a service\r\n        ratings: '* * * */10',\r\n        activeTab: 'description',\r\n      },\r\n      favourateunfilled: require('@/assets/favourate2png.png'),\r\n      favourateFilledIn: require('@/assets/favourateFilledIn.png'),\r\n      iFilled: false,\r\n      relatedItems: [\r\n        { id: 1, name: 'Related item 1' },\r\n        { id: 2, name: 'Related item 2' },\r\n        { id: 3, name: 'Related item 3' },\r\n      ],\r\n    };\r\n  },\r\n};\r\n</script>\r\n"],"mappings":"AAqHA,OAAO,mBAAmB;AAC1B,OAAOA,MAAK,MAAO,yBAAyB;AAC5C,OAAOC,aAAY,MAAO,gCAAgC;AAE1D,eAAe;EACbC,IAAI,EAAE,kBAAkB;EACxBC,UAAU,EAAE;IACVH,MAAM;IACNC;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE;QAChBC,QAAQ,EAAE,GAAG;QACbJ,IAAI,EAAE,kBAAkB;QACxBK,WAAW,EAAE,oCAAoC;QACjDC,KAAK,EAAE,KAAK;QACZC,WAAW,EAAE,UAAU;QAAE;QACzBC,OAAO,EAAE,YAAY;QACrBC,SAAS,EAAE;MACb,CAAC;MACDC,iBAAiB,EAAEC,OAAO,CAAC,4BAA4B,CAAC;MACxDC,iBAAiB,EAAED,OAAO,CAAC,gCAAgC,CAAC;MAC5DE,OAAO,EAAE,KAAK;MACdC,YAAY,EAAE,CACZ;QAAEC,EAAE,EAAE,CAAC;QAAEf,IAAI,EAAE;MAAiB,CAAC,EACjC;QAAEe,EAAE,EAAE,CAAC;QAAEf,IAAI,EAAE;MAAiB,CAAC,EACjC;QAAEe,EAAE,EAAE,CAAC;QAAEf,IAAI,EAAE;MAAiB,CAAC;IAErC,CAAC;EACH;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}